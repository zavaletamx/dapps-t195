<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EjemploWebServiceActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/login"
            android:scaleType="centerInside"
            android:layout_marginVertical="20dp" />

        <TextView
            android:id="@+id/tv_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="_NOMBRE_ _APELLIDO_" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="12"
            android:layout_marginVertical="10dp">

            <TextView
                android:id="@+id/tv_edad"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:text="_EDAD_"
                android:textAlignment="center"
                android:layout_weight="8"/>

            <TextView
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:text="_ICO_ALUMNO_"
                android:textAlignment="center"
                android:layout_weight="4"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:text="Dirección"
            android:textSize="20sp"
            android:layout_marginHorizontal="10dp"
            android:drawableLeft="@drawable/ic_assistant_direction"
            android:drawablePadding="10dp"/>

        <!-- Agregar dirección completa -->


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:text="Idiomas"
            android:textSize="20sp"
            android:layout_marginHorizontal="10dp"
            android:drawableLeft="@drawable/ic_language"
            android:drawablePadding="10dp"/>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:text="Experiencia laboral"
            android:textSize="20sp"
            android:drawableLeft="@drawable/ic_work"
            android:layout_marginHorizontal="10dp"
            android:drawablePadding="10dp"/>
        <!-- Ver el tutorial de ListView personalizado -->
        <ListView
            android:layout_width="match_parent"
            android:layout_height="200dp" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>