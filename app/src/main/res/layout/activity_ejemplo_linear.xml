<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EjemploLinearActivity"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/hombre"
        android:layout_marginVertical="40dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(442) 204 83 29"
            android:layout_marginHorizontal="5dp"
            android:drawableLeft="@drawable/ic_baseline_contact_phone_24"
            android:drawablePadding="5dp"
            android:backgroundTint="#ecf0f1"
            android:background="#ecf0f1"
            android:padding="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="raul.zavaletazea@uteq.edu.mx"
            android:layout_marginHorizontal="5dp"
            android:backgroundTint="#ecf0f1"
            android:background="#ecf0f1"
            android:padding="5dp"
            android:drawableLeft="@drawable/ic_baseline_contact_mail_24"
            android:drawablePadding="5dp" />

    </LinearLayout>
    <!-- Termina Layout Horizontal -->

    <Button
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:padding="20dp"
        android:backgroundTint="#E88912"
        android:drawableLeft="@drawable/ic_baseline_call_24"
        android:text="Llamar"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:padding="20dp"
        android:backgroundTint="#E88912"
        android:drawableLeft="@drawable/ic_baseline_alternate_email_24"
        android:text="E-mail"/>

</LinearLayout>